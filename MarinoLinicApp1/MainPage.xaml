<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarinoLinicApp1.MainPage">

    <StackLayout BackgroundColor="AliceBlue"
                 VerticalOptions="Center">

        <Entry x:Name="userEntry" Margin="15" TextColor="Black" Placeholder="E-mail" Keyboard="Email"/>
        <Entry x:Name="passEntry" Margin="15" TextColor="Black" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="loginButton" Text="Log in" Margin="20" BackgroundColor="DarkCyan" TextColor="white" Clicked="loginButton_Clicked"/>
        <Button x:Name="registerButton" Text="Register" BackgroundColor="Transparent" TextColor="black" Clicked="registerButton_Clicked"/>

    </StackLayout>

</ContentPage>
